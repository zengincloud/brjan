generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id          String       @id @default(cuid())
  title       String
  description String
  type        TaskType
  status      TaskStatus
  priority    TaskPriority
  dueDate     DateTime?
  createdAt   DateTime     @default(now())
  contact     Json?
  company     Json?
  events      Event[]

  @@map("tasks")
}

model Event {
  id        String    @id @default(cuid())
  type      EventType
  taskId    String
  createdAt DateTime  @default(now())
  meta      Json?
  task      Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model Prospect {
  id           String         @id @default(cuid())
  name         String
  email        String         @unique
  title        String?
  company      String?
  phone        String?
  location     String?
  linkedin     String?
  status       ProspectStatus @default(new_lead)
  sequence     String?
  sequenceStep String?
  pdlData      Json?
  lastActivity DateTime       @default(now())
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@map("prospects")
}

model Account {
  id           String        @id @default(cuid())
  name         String        @unique
  industry     String?
  location     String?
  website      String?
  employees    Int?
  status       AccountStatus @default(new_lead)
  sequence     String?
  sequenceStep String?
  lastActivity DateTime      @default(now())
  contacts     Int           @default(0)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@map("accounts")
}

enum TaskType {
  hot_lead
  interested
  website_visit
  follow_up
  other
}

enum TaskStatus {
  to_do
  in_progress
  done
}

enum TaskPriority {
  high
  medium
  low
}

enum EventType {
  email_sent
  call_started
  call_completed
}

enum ProspectStatus {
  new_lead
  in_sequence
  contacted
  meeting_scheduled
  qualified
  unqualified
}

enum AccountStatus {
  new_lead
  in_sequence
  contacted
  meeting_scheduled
  customer
  churned
}
