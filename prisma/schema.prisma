generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String       @id @default(cuid())
  title       String
  description String
  type        TaskType
  status      TaskStatus
  priority    TaskPriority
  dueDate     DateTime?
  createdAt   DateTime     @default(now())
  contact     Json?
  company     Json?
  events      Event[]

  @@map("tasks")
}

model Event {
  id        String    @id @default(cuid())
  type      EventType
  taskId    String
  createdAt DateTime  @default(now())
  meta      Json?
  task      Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model Prospect {
  id           String         @id @default(cuid())
  name         String
  email        String         @unique
  title        String?
  company      String?
  phone        String?
  location     String?
  linkedin     String?
  status       ProspectStatus @default(new_lead)
  sequence     String?
  sequenceStep String?
  pdlData      Json?
  lastActivity DateTime       @default(now())
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@map("prospects")
}

model Account {
  id           String        @id @default(cuid())
  name         String        @unique
  industry     String?
  location     String?
  website      String?
  employees    Int?
  status       AccountStatus @default(new_lead)
  sequence     String?
  sequenceStep String?
  lastActivity DateTime      @default(now())
  contacts     Int           @default(0)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@map("accounts")
}

model Email {
  id              String      @id @default(cuid())
  to              String
  cc              String?
  bcc             String?
  from            String
  subject         String
  bodyText        String
  bodyHtml        String?
  prospectId      String?
  accountId       String?
  templateId      String?
  emailType       EmailType   @default(one_off)
  status          EmailStatus @default(draft)
  sendgridId      String?
  scheduledFor    DateTime?
  sentAt          DateTime?
  openedAt        DateTime?
  clickedAt       DateTime?
  failureReason   String?
  metadata        Json?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@map("emails")
}

model Call {
  id              String      @id @default(cuid())
  from            String
  to              String
  prospectId      String?
  accountId       String?
  twilioSid       String?     @unique
  status          CallStatus  @default(queued)
  outcome         CallOutcome?
  duration        Int?
  recordingUrl    String?
  transcription   String?
  notes           String?
  failureReason   String?
  startedAt       DateTime?
  endedAt         DateTime?
  metadata        Json?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@map("calls")
}

enum TaskType {
  hot_lead
  interested
  website_visit
  follow_up
  other
}

enum TaskStatus {
  to_do
  in_progress
  done
}

enum TaskPriority {
  high
  medium
  low
}

enum EventType {
  email_sent
  call_started
  call_completed
}

enum ProspectStatus {
  new_lead
  in_sequence
  contacted
  meeting_scheduled
  qualified
  unqualified
}

enum AccountStatus {
  new_lead
  in_sequence
  contacted
  meeting_scheduled
  customer
  churned
}

enum EmailType {
  one_off
  sequence
  priority
  template
}

enum EmailStatus {
  draft
  scheduled
  sending
  sent
  failed
  bounced
}

enum CallStatus {
  queued
  ringing
  in_progress
  completed
  failed
  busy
  no_answer
  canceled
}

enum CallOutcome {
  connected
  voicemail
  no_answer
  busy
  failed
  gatekeeper
}
