generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  supabaseId String   @unique
  email      String   @unique
  firstName  String?
  lastName   String?
  avatarUrl  String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  tasks          Task[]
  prospects      Prospect[]
  accounts       Account[]
  emails         Email[]
  calls          Call[]
  sequences      Sequence[]
  emailTemplates EmailTemplate[]

  @@map("users")
}

model Task {
  id          String       @id @default(cuid())
  title       String
  description String
  type        TaskType
  status      TaskStatus
  priority    TaskPriority
  dueDate     DateTime?
  createdAt   DateTime     @default(now())
  contact     Json?
  company     Json?
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  events      Event[]

  @@index([userId])
  @@map("tasks")
}

model Event {
  id        String    @id @default(cuid())
  type      EventType
  taskId    String
  createdAt DateTime  @default(now())
  meta      Json?
  task      Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model Prospect {
  id           String         @id @default(cuid())
  name         String
  email        String
  title        String?
  company      String?
  phone        String?
  location     String?
  linkedin     String?
  status       ProspectStatus @default(new_lead)
  sequence     String?
  sequenceStep String?
  pdlData      Json?
  lastActivity DateTime       @default(now())
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  userId            String
  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  calls             Call[]
  prospectSequences ProspectSequence[]

  @@unique([userId, email])
  @@index([userId])
  @@map("prospects")
}

model Account {
  id           String        @id @default(cuid())
  name         String
  industry     String?
  location     String?
  website      String?
  employees    Int?
  status       AccountStatus @default(new_lead)
  sequence     String?
  sequenceStep String?
  lastActivity DateTime      @default(now())
  contacts     Int           @default(0)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  userId           String
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  calls            Call[]
  accountSequences AccountSequence[]

  @@unique([userId, name])
  @@index([userId])
  @@map("accounts")
}

model Email {
  id              String      @id @default(cuid())
  to              String
  cc              String?
  bcc             String?
  from            String
  subject         String
  bodyText        String
  bodyHtml        String?
  prospectId      String?
  accountId       String?
  templateId      String?
  emailType       EmailType   @default(one_off)
  status          EmailStatus @default(draft)
  sendgridId      String?
  scheduledFor    DateTime?
  sentAt          DateTime?
  openedAt        DateTime?
  clickedAt       DateTime?
  failureReason   String?
  metadata        Json?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  userId          String
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("emails")
}

model Call {
  id                   String      @id @default(cuid())
  from                 String
  to                   String
  prospectId           String?
  accountId            String?
  twilioSid            String?     @unique
  status               CallStatus  @default(queued)
  outcome              CallOutcome?
  duration             Int?
  recordingUrl         String?
  recordingSid         String?
  recordingDuration    Int?
  transcription        String?
  transcriptionStatus  String?
  notes                String?
  failureReason        String?
  startedAt            DateTime?
  endedAt              DateTime?
  metadata             Json?
  createdAt            DateTime    @default(now())
  updatedAt            DateTime    @updatedAt
  userId               String
  user                 User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  prospect             Prospect?   @relation(fields: [prospectId], references: [id], onDelete: SetNull)
  account              Account?    @relation(fields: [accountId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([prospectId])
  @@index([accountId])
  @@map("calls")
}

enum TaskType {
  hot_lead
  interested
  website_visit
  follow_up
  other
}

enum TaskStatus {
  to_do
  in_progress
  done
}

enum TaskPriority {
  high
  medium
  low
}

enum EventType {
  email_sent
  call_started
  call_completed
}

enum ProspectStatus {
  new_lead
  in_sequence
  contacted
  meeting_scheduled
  qualified
  unqualified
}

enum AccountStatus {
  new_lead
  in_sequence
  contacted
  meeting_scheduled
  customer
  churned
}

enum EmailType {
  one_off
  sequence
  priority
  template
}

enum EmailStatus {
  draft
  scheduled
  sending
  sent
  failed
  bounced
}

enum CallStatus {
  queued
  ringing
  in_progress
  completed
  failed
  busy
  no_answer
  canceled
}

enum CallOutcome {
  connected
  voicemail
  no_answer
  busy
  failed
  gatekeeper
}

model Sequence {
  id          String         @id @default(cuid())
  name        String
  description String?
  status      SequenceStatus @default(draft)
  isActive    Boolean        @default(false)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  userId      String
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  steps             SequenceStep[]
  prospectSequences ProspectSequence[]
  accountSequences  AccountSequence[]

  @@index([userId])
  @@map("sequences")
}

model SequenceStep {
  id           String           @id @default(cuid())
  sequenceId   String
  type         SequenceStepType
  name         String
  order        Int
  delayDays    Int              @default(0)
  delayHours   Int              @default(0)
  emailSubject String?
  emailBody    String?
  callScript   String?
  taskNotes    String?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  sequence Sequence @relation(fields: [sequenceId], references: [id], onDelete: Cascade)

  @@index([sequenceId])
  @@map("sequence_steps")
}

model ProspectSequence {
  id           String                 @id @default(cuid())
  prospectId   String
  sequenceId   String
  currentStep  Int                    @default(0)
  status       ProspectSequenceStatus @default(active)
  startedAt    DateTime               @default(now())
  completedAt  DateTime?
  pausedAt     DateTime?
  failedAt     DateTime?
  nextActionAt DateTime?
  createdAt    DateTime               @default(now())
  updatedAt    DateTime               @updatedAt

  prospect Prospect @relation(fields: [prospectId], references: [id], onDelete: Cascade)
  sequence Sequence @relation(fields: [sequenceId], references: [id], onDelete: Cascade)

  @@unique([prospectId, sequenceId])
  @@index([sequenceId])
  @@index([nextActionAt])
  @@map("prospect_sequences")
}

model AccountSequence {
  id           String                @id @default(cuid())
  accountId    String
  sequenceId   String
  currentStep  Int                   @default(0)
  status       AccountSequenceStatus @default(active)
  startedAt    DateTime              @default(now())
  completedAt  DateTime?
  pausedAt     DateTime?
  failedAt     DateTime?
  nextActionAt DateTime?
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt

  account  Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  sequence Sequence @relation(fields: [sequenceId], references: [id], onDelete: Cascade)

  @@unique([accountId, sequenceId])
  @@index([sequenceId])
  @@index([nextActionAt])
  @@map("account_sequences")
}

enum SequenceStatus {
  draft
  active
  paused
  archived
}

enum SequenceStepType {
  email
  call
  linkedin
  task
  wait
}

enum ProspectSequenceStatus {
  active
  paused
  completed
  failed
}

enum AccountSequenceStatus {
  active
  paused
  completed
  failed
}

model EmailTemplate {
  id          String   @id @default(cuid())
  name        String
  subject     String
  body        String
  description String?
  category    String?  @default("general")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("email_templates")
}
